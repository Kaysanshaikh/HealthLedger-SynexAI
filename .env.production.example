# Production Environment Configuration
# Copy this file to .env and fill in your production values

# ============================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.neon.tech/healthledger_fl?sslmode=require

# ============================================
# BLOCKCHAIN CONFIGURATION (Polygon Amoy)
# ============================================
# Your wallet private key (NEVER commit this!)
PRIVATE_KEY=0x

# Deployed contract address (fill after deployment)
CONTRACT_ADDRESS=

# Polygon Amoy RPC endpoint
# Get from: https://getblock.io/ or https://www.alchemy.com/
POLYGON_AMOY_RPC=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY

# ============================================
# IPFS CONFIGURATION (Pinata)
# ============================================
# Get from: https://pinata.cloud/
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a secure random string (min 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5001
NODE_ENV=production

# Your frontend URL (Render static site or Vercel)
FRONTEND_URL=https://your-frontend-url.onrender.com

# ============================================
# FEDERATED LEARNING CONFIGURATION
# ============================================
FL_ENABLED=true
FL_MIN_PARTICIPANTS=2
FL_ROUND_TIMEOUT=3600

# ZK Circuit paths (for production ZK proofs)
ZK_CIRCUIT_PATH=./circuits
ZK_PROVING_KEY_PATH=./circuits/proving_key.zkey
ZK_VERIFICATION_KEY_PATH=./circuits/verification_key.json

# ============================================
# ML MODEL CONFIGURATION
# ============================================
ML_BACKEND=tensorflow
ML_MODEL_STORAGE=ipfs
DEFAULT_BATCH_SIZE=32
DEFAULT_EPOCHS=10
DEFAULT_LEARNING_RATE=0.001

# ============================================
# OPTIONAL: MONITORING & LOGGING
# ============================================
# SENTRY_DSN=
# LOG_LEVEL=info
