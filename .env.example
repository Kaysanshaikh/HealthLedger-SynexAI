# Blockchain Configuration
POLYGON_AMOY_RPC=https://polygon-amoy.g.alchemy.com/v2/<YOUR_ALCHEMY_API_KEY>
PRIVATE_KEY=0x<YOUR_PRIVATE_KEY>
ADMIN_ADDRESS=0x<YOUR_ADMIN_ADDRESS>
CONTRACT_ADDRESS=0x<YOUR_CONTRACT_ADDRESS>

# Neon Database Configuration
# You can use a single DATABASE_URL or the individual PG fields
DATABASE_URL=postgresql://<USER>:<PASSWORD>@<HOST>/<DATABASE>?sslmode=require
PGHOST=<YOUR_NEON_HOST>
PGDATABASE=neondb
PGUSER=neondb_owner
PGPASSWORD=<YOUR_NEON_PASSWORD>
PGSSLMODE=require
PGCHANNELBINDING=require

# Pinata IPFS Configuration
PINATA_API_KEY=<YOUR_PINATA_API_KEY>
PINATA_SECRET_KEY=<YOUR_PINATA_SECRET_KEY>
PINATA_JWT=<YOUR_PINATA_JWT>

# Server Configuration
PORT=5001
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# JWT AUTHENTICATION
# Generate a secure 32+ character random string
JWT_SECRET=<YOUR_SECURE_JWT_SECRET>

# FEDERATED LEARNING CONFIGURATION
FL_ENABLED=true
FL_MIN_PARTICIPANTS=2
FL_ROUND_TIMEOUT=3600

# ZK Circuit paths
ZK_CIRCUIT_PATH=./circuits
ZK_PROVING_KEY_PATH=./circuits/proving_key.zkey
ZK_VERIFICATION_KEY_PATH=./circuits/verification_key.json

# ML MODEL CONFIGURATION
ML_BACKEND=python
ML_MODEL_STORAGE=ipfs
DEFAULT_BATCH_SIZE=32
DEFAULT_EPOCHS=10
DEFAULT_LEARNING_RATE=0.001

# Master encryption key for decentralised model updates
FL_ENCRYPTION_KEY=<YOUR_BASE64_ENCRYPTION_KEY>
